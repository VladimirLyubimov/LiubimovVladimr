import wikipedia                                                                
import help_wiki_function                                                       
                                                                                
def FindLang(lang):                                                             
    if (lang in wikipedia.languages().keys()):                                  
        wikipedia.set_lang(lang)                                                
        return True                                                             
    else:                                                                       
        return False                                                            
                                                                                
def MaxWord(pages_titles):                                                      
    pagetit = ''                                                                
    maxlen = 0                                                                  
    for i in pages_titles:                                                      
        if help_wiki_function.is_page_valid(i):                         
            active_page = wikipedia.page(i)                                     
            page_content = active_page.summary                                  
            lpage_content = page_content.split()                                
            if maxlen <= len(lpage_content):
                maxlen = len(lpage_content)                                     
                pagetit = active_page.title                                     
    result = str(maxlen) + ' ' + pagetit                                        
    return result                                                               
                                                                                
def FindLink(pages_titles):                                                     
    result =['1']                                                               
    result[0] = pages_titles[0]                                                 
    link = []                                                                   
    bol = 0
    for i in range(len(pages_titles)-1):                                        
        if help_wiki_function.is_page_valid(pages_titles[i]):           
            active_page = wikipedia.page(pages_titles[i])                       
            bol = 0                                                               
            link = active_page.links                                            
            if pages_titles[i+1] in link:                                       
                result.append(pages_titles[i+1])                                
                bol = 1                                                         
            res = ''                                                            
            if bol == 0:                                                        
                for k in link:                                                  
                    if help_wiki_function.is_page_valid(k):             
                        if pages_titles[i+1] in wikipedia.page(k).links:        
                            res = k                                             
                            result.append(res)                                  
                            result.append(pages_titles[i+1])                    
                            break
    return result                                                               
                                                                                
pages_names = input().split(', ')                                               
if FindLang(pages_names.pop()):                                                 
    print(MaxWord(pages_names))                                                 
    print(FindLink(pages_names))                                                
else:                                                                           
    print('no results')                                                         
                        
