#include <stdio.h>
#include <stdlib.h>

struct ShipCoord{
	int x1;
	int y1;
	int x2;
	int y2;
};

typedef struct ShipCoord coord;

int** CreateGrid(){
	int** grid;
	grid = malloc(10*sizeof(int*));
	for (int i = 0; i < 10; i++)
		grid[i] = malloc(10*sizeof(int));
	for(int j = 0; j < 10; j++)
		for (int i = 0; i < 10; i++)
			grid[j][i] = 0;
	return grid;
}

void PrintGrid(int** grid){
	for(int j = 0; j < 10; j++){
		for (int i = 0; i < 10; i++)
			printf("%d ", grid[j][i]);
		printf("\n");
	}	
}

int** InputDot(int** grid){
	int x,y;
	scanf("%d %d", &x, &y);
	if((x>9)||(x<0)||(y>9)||(y<0)){
		printf("Wrong coordinates! Try good ones.\n");
		return grid;
	}
	grid[y][x] = 1;
	return grid;	
}

coord GetShipCoordinates(){
	coord scoord;
	scanf("%d %d %d %d", &scoord.x1, &scoord.y1, &scoord.x2, &scoord.y2);
	return scoord;	
}

int** GetShip(int** grid){
	coord sc;
	sc = GetShipCoordinates();
	if(sc.x1 == sc.x2){
		for(int i = sc.y1; i <= sc.y2; i++)
			grid[i][sc.x1] = 2;
	}

	if(sc.y1 == sc.y2){
		for(int i = sc.x1; i <= sc.x2; i++)
			grid[sc.y1][i] = 2;
	}
	return grid;			
}

int** GetShips(int** grid){
	for(int i = 0; i < 1; i++)
		grid = GetShip(grid);
	return grid;
}

int** OneTurn(int** grid){
	int x,y;
	scanf("%d %d", &x, &y);
	if(grid[y][x] == 2){
		printf("Great shoot, Commader!\n");
		grid[y][x] = 8;		
	}
	else{
		printf("Target has dodged, Commader!\n");
		grid[y][x] = 8;
	}
	return grid;
}

int main(){
        int** mygrid= CreateGrid();
	PrintGrid(mygrid);
	//mygrid = InputDot(mygrid);
	//PrintGrid(mygrid);
	mygrid = GetShips(mygrid);	
	PrintGrid(mygrid);
	mygrid = OneTurn(mygrid);
	PrintGrid(mygrid);	
    	return 0;
}
